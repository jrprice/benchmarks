#!/bin/bash
#SBATCH -A T2-CSRSE-CPU
#SBATCH -p skylake
#SBATCH --nodes=1
#SBATCH --ntasks=32
#SBATCH --time=00:15:00

export I_MPI_PIN_DOMAIN=omp:compact
export I_MPI_PIN_ORDER=scatter

export GMX_MAXBACKUP=-1
mpirun -np 32 $BUILD_DIR/bin/gmx_mpi mdrun \
    -s $BENCHMARK_DIR/benchmarks/ion_channel_vsites.bench/pme-runs/topol.tpr \
    -noconfout -resethway -nsteps -1 -maxh 0.05 -quiet \
    -nb cpu -ntomp 1 -npme 0 -pin on -notunepme
